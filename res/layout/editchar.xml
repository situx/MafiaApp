<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
              app:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" app:columnCount="2">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/nameView" android:text="@string/charactername" app:layout_column="0"
            app:layout_row="1" app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editCharName" app:layout_column="0" app:layout_row="2" app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/group"
            android:id="@+id/groupView" app:layout_column="0" app:layout_row="3" app:layout_columnSpan="2"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/groupspinner" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="4"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editCharGroup" app:layout_column="0" app:layout_row="4" android:inputType="text"
            app:layout_columnSpan="2" android:visibility="gone"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/round"
            android:id="@+id/roundView" app:layout_column="0" app:layout_row="5" app:layout_columnSpan="2"/>
    <RadioGroup
            android:id="@+id/radioRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_column="0" app:layout_row="6">

        <RadioButton
                android:id="@+id/editCharEveryRound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/everyRound"
                android:checked="false" />
        <RadioButton
                android:id="@+id/editCharNoRoundRB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/noround" />
        <RadioButton
                android:id="@+id/editCharEveryXRoundRB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/everyXRound"
                android:checked="false" />

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editCharEveryXRound" android:layout_gravity="center_horizontal"
                android:enabled="false"/>
        <RadioButton
                android:id="@+id/editCharXRoundRB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/xround" />
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editCharXRound" android:enabled="false"/>

    </RadioGroup>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCharImgView" app:layout_column="1" app:layout_row="6"
            android:contentDescription="chararcterimg" android:maxHeight="150dp" android:maxWidth="150dp"
            android:src="@drawable/title"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/position"
            android:id="@+id/positionView" app:layout_column="0" app:layout_row="7"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharPosition" app:layout_column="0" app:layout_row="8"
            app:layout_columnSpan="2" android:editable="false"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/minamount"
            android:id="@+id/minAmountView" app:layout_column="0" app:layout_row="9"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharMinAmount" app:layout_row="10" app:layout_column="0"
            app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/maxamount"
            android:id="@+id/maxamountView" app:layout_column="0" app:layout_row="11"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharMaxAmount" app:layout_column="0" app:layout_row="12"
            app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/extra"
            android:id="@+id/extraView" app:layout_column="0" app:layout_row="13"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharExtra" app:layout_column="0" app:layout_row="14"
            app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balancevalue"
            android:id="@+id/balanceValueText" app:layout_row="15" app:layout_column="0"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharBalanceValue" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="16"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winningalivepoints"
            android:id="@+id/winningAliveText" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="18"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editCharWinningAlive" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="19"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winningpointsdead"
            android:id="@+id/winningDeadText" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="20"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCharWinningDead" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="21"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options"
            app:layout_column="0" app:layout_row="22" android:id="@+id/optionsView"
            app:layout_columnSpan="2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winsalone"
            android:id="@+id/editCharWinsaloneBox" app:layout_column="0" app:layout_columnSpan="2"
            app:layout_row="23"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cannotwin"
            android:id="@+id/editCharNopointsBox" app:layout_column="0" app:layout_row="24"
            app:layout_columnSpan="2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calleveryone"
            android:id="@+id/editCharCallEveryoneBox" app:layout_column="0" app:layout_row="25"
            app:layout_columnSpan="2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/needsdeadchars"
            android:id="@+id/editCharDeadcharBox" app:layout_column="0" app:layout_row="26"
            app:layout_columnSpan="2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fixeddeath"
            android:id="@+id/editCharFixedDeathBox" app:layout_column="0" app:layout_row="27"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/editCharFixedDeath" android:enabled="false" app:layout_column="0" app:layout_row="28"
            android:inputType="numberSigned" app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/description"
            android:id="@+id/charViewDescription" app:layout_column="0" app:layout_row="29"
            app:layout_columnSpan="2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editCharDescription" app:layout_column="0" app:layout_row="30"
            app:layout_columnSpan="2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abilities"
            android:id="@+id/abbTextView" app:layout_column="0" app:layout_row="31"
            app:layout_columnSpan="1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addAbility"
            app:layout_row="31" app:layout_column="1" app:layout_columnSpan="1"
            android:id="@+id/addAbilityButton"/>

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editAbbListView" app:layout_column="0" app:layout_row="32"
                app:layout_columnSpan="2" app:layout_rowSpan="3" android:fastScrollEnabled="true"
                android:visibility="visible" app:layout_gravity="fill_horizontal|center_horizontal|left|top"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actions"
            android:id="@+id/actionTextView" app:layout_column="0" app:layout_row="35"
            app:layout_columnSpan="1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addAction"
            app:layout_row="35" app:layout_column="1" app:layout_columnSpan="1"
            android:id="@+id/addActionButton"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editActionListView" app:layout_column="0" app:layout_row="36"
            app:layout_columnSpan="2" app:layout_rowSpan="4" android:fastScrollEnabled="true"
            android:visibility="visible" app:layout_gravity="fill_horizontal|center_horizontal|left|top"/>
</android.support.v7.widget.GridLayout>
</ScrollView>