<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
              app:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/test" app:rowCount="6" app:columnCount="2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:id="@+id/roundTextView" app:layout_gravity="center|left|top"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            app:layout_row="0" app:layout_column="0" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/charViewRoundAbility" app:layout_column="1"
            app:layout_gravity="center_horizontal|right|top" app:layout_row="1" app:layout_columnSpan="1"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abbListView" app:layout_row="2" app:layout_column="0"
            app:layout_gravity="left|top" app:layout_columnSpan="2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roundImageView" app:layout_gravity="left|top"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/roundDescriptionTextView"
            android:layout_toRightOf="@+id/roundTextView" android:layout_alignParentEnd="false"
            app:layout_column="0" app:layout_row="1" app:layout_columnSpan="1"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/roundDescriptionTextView"
            android:layout_alignRight="@+id/roundTextView" android:layout_below="@+id/roundTextView"
            app:layout_column="0" app:layout_columnSpan="2" app:layout_gravity="left|top"
            app:layout_row="3"/>
</android.support.v7.widget.GridLayout>