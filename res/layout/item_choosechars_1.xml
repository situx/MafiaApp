
    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" app:rowCount="1" app:columnCount="3">

        <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/imageView" app:layout_gravity="center_horizontal|left|top" android:minWidth="20dp"
                android:minHeight="20dp" android:layout_marginRight="0dp" android:maxHeight="20dp" android:maxWidth="20dp"
                android:contentDescription="CharImg" app:layout_column="0" app:layout_row="0"
                app:layout_columnSpan="1" app:layout_rowSpan="1" android:layout_marginLeft="20dp"/>
        <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/CharChooseTextView" app:layout_gravity="center_horizontal|top"
                app:layout_column="1" app:layout_columnSpan="1" app:layout_row="0"
                app:layout_rowSpan="1"/>
        <CheckBox
            android:id="@+id/optionCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.00"
            android:scaleY="2.00"
            app:layout_gravity="center_horizontal|top" app:layout_column="2" app:layout_columnSpan="1"
            app:layout_row="0" app:layout_rowSpan="1"/>

    </android.support.v7.widget.GridLayout>
