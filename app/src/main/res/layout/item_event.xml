<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
              app:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" app:columnCount="2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventItemTitleTextView" app:layout_row="0" app:layout_column="1"
            app:layout_gravity="right" app:layout_columnSpan="1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/eventItemDescriptionTitleTextView"
            app:layout_gravity="fill_horizontal|right|top"
            app:layout_column="1"
            app:layout_row="1" android:gravity="left" app:layout_columnSpan="1"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active"
            android:id="@+id/eventActivecheckBox" app:layout_column="0" app:layout_row="0" app:layout_gravity="right"
            app:layout_columnSpan="1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editevent"
            android:id="@+id/editEventButton" app:layout_row="1" app:layout_column="0"
            app:layout_columnSpan="1" app:layout_gravity="right"/>
</android.support.v7.widget.GridLayout>