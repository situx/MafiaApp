
    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" app:rowCount="2" app:columnCount="4">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/statImageView" app:layout_gravity="center_horizontal|left|top" android:minWidth="20dp"
                android:minHeight="20dp" android:layout_marginRight="0dp"
                android:maxHeight="20dp" android:maxWidth="20dp"
                android:contentDescription="@string/img" app:layout_row="0" app:layout_column="0"
                app:layout_rowSpan="2"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/statTextView" app:layout_gravity="center_horizontal|top"
                app:layout_column="1" app:layout_columnSpan="1" app:layout_row="0"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statSpinner" app:layout_gravity="center_horizontal|top"
                app:layout_column="3" app:layout_columnSpan="1" app:layout_row="0"
                app:layout_rowSpan="1"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nopoints"
                android:id="@+id/statButton2" app:layout_column="1" app:layout_row="1"
                app:layout_rowSpan="1" app:layout_columnSpan="1"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statButton" app:layout_gravity="center|left" app:layout_column="3"
                android:text="@string/grantpoints" app:layout_columnSpan="1" app:layout_row="1"
                app:layout_rowSpan="1"/>

    </android.support.v7.widget.GridLayout>
