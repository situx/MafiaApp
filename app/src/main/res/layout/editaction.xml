<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:columnCount="2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:id="@+id/editActionTitleTextView" app:layout_column="0" app:layout_row="0"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editActionTitle" app:layout_row="1" app:layout_column="0"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gamemaster"
                android:id="@+id/editActionGameMastertextView" app:layout_row="2" app:layout_column="0"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editActionGameMaster" app:layout_row="3" app:layout_column="0"
                android:inputType="textMultiLine"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player"
                android:id="@+id/editActionPlayertextView" app:layout_row="4" app:layout_column="0"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editActionPlayer" app:layout_row="5" app:layout_column="0" app:layout_gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/round"
                android:id="@+id/editActionRoundTextView" app:layout_row="6" app:layout_column="0"
                android:singleLine="true"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editActionRound" app:layout_row="7" app:layout_column="0"
                android:inputType="numberSigned"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:id="@+id/editActionPositiontextView" app:layout_row="8" app:layout_column="0"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editActionPosition" app:layout_row="9" app:layout_column="0"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ondead"
                android:id="@+id/editActionOnDeadCheckBox" app:layout_row="10" app:layout_column="0"
                android:singleLine="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saveaction"
                android:id="@+id/saveAction" app:layout_row="11" app:layout_column="0"/>
    </android.support.v7.widget.GridLayout>
</LinearLayout>